                    <i class="fa fa-arrow-right"></i>
                  </td>
                  <td class="coltimeline">
                    <div class="timebubble">
                      <p><%= pin.ad.created_at.to_date %><p>
                    </div>
                  </td>
                  <td class="colarrow2">
                  </td>
                  <td class="colcomment">
                    <% if pin.comment %>
                      <div class="comment-view">
                        <p><%= pin.comment %></p>
