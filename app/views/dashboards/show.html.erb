<div class="page-wrapper">
<!-- Timeline container -->
  <div>
  </div>
<!-- End of Timeline container -->
<!-- Ads container -->
  <div>
<!-- Bootstrap grid -->
    <div class="container", id="dashboard">
      <h1><%= @dashboard.name %></h1>
      <div class="row">
        <% @dashboard.pins.each do |pin| %>
          <div class="col-xs-6 col-sm-3">
<!-- Card -->
            <div>
<!-- Image div -->
              <div>
                <%= cl_image_tag(pin.ad.cloudinary_public_id, width: 250, height: 100, crop: :pad) %>
              </div>
<!-- text div -->
              <div>
                <h4><%= pin.ad.competitor.name.capitalize %></h4>
                <h4><%= pin.ad.created_at.to_date %></h4>
                <h4><%= link_to "Supprimer", pin_path(pin), method: "delete", class: "btn btn-conf-2 btn-green"  %></h4>
              </div>
            </div>
<!-- End of card -->
          </div>
        <% end %>
      </div>
      <h4><%= link_to "Retour aux annonces", ads_path, class: "btn btn-conf-2 btn-green", style: "width: 100%"  %></h4>
      <h4><%= link_to "Exporter ce dashboard", root_path, class: "btn btn-conf-2 btn-green", style: "width: 100%"  %></h4>
    </div>
<!-- End of Bootstrap grid -->
  </div>
<!-- End of Ads container -->
</div>
