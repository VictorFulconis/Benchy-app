<div class="page-wrapper">
  <div class="page-container">
    <div class="container form">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <%= simple_form_for (@dashboard) do |f| %>
            <%= f.error_notification %>
            <h1 class="text-center"><%= "Dashboard's detail" %></h1>
            <%= f.input :name, as: :string, placeholder: "My dashboard's name" %>
            <%= f.button :submit, class: "btn btn-primary", style: "width: 100%", value: "Save" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
