<%= simple_form_for [@dashboard, @share] do |f| %>
  <%= f.error_notification %>
  <%= f.association :user, as: :check_boxes, label_method: :email, collection: User.where(company_name: current_user.company_name), label: "Select a team member" %>
  <%= f.button :submit, class: "btn btn-conf btn-green aligncenter", label: "Save" %>
<% end %>

